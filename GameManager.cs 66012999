using UnityEngine;

// Implements IPauseable and ITimeControllable
public class GameManager : MonoBehaviour, IPauseable, ITimeControllable
{
    private bool isPaused = false;

    // Implementation of IPauseable
    public void Pause()
    {
        isPaused = true;
        Time.timeScale = 0f; // Stops all time-based game movement
        Debug.Log("Game Paused");
    }

    // Implementation of IPauseable
    public void Resume()
    {
        isPaused = false;
        Time.timeScale = 1f; // Resumes normal time
        Debug.Log("Game Resumed");
    }

    // Implementation of ITimeControllable
    public void SetTimeScale(float scale)
    {
        // Don't allow time scale changes if the game is paused
        if (isPaused) return;

        Time.timeScale = scale;
        Debug.Log($"Time scale set to: {scale}");
    }

    // A helper method to easily toggle the pause state
    public void TogglePause()
    {
        if (isPaused)
        {
            Resume();
        }
        else
        {
            Pause();
        }
    }
}
