using UnityEngine;

// Implements both ICollectible and IUsable
public class HealthPotion : MonoBehaviour, ICollectible, IUsable
{
    public int healAmount = 25;

    // Implementation of ICollectible
    public void Collect()
    {
        Debug.Log("Collected Health Potion!");

        // Typically, you would add this to an inventory.
        // For simplicity, we'll just deactivate it,
        // pretending it's "held" by the player.
        gameObject.SetActive(false);
    }

    // Implementation of IUsable
    public void Use()
    {
        Debug.Log($"Used potion! Healed for {healAmount} HP.");

        // Destroy the potion after use.
        Destroy(gameObject);
    }
}
